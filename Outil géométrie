<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Mon Outil Géométrie</title>
    <style>
        body { font-family: sans-serif; display: flex; flex-direction: column; align-items: center; background: #f0f0f0; }
        canvas { border: 2px solid #333; background: white; cursor: crosshair; margin-top: 20px; }
        .controls { margin-top: 10px; gap: 10px; display: flex; }
        button { padding: 8px 16px; cursor: pointer; background: #007bff; color: white; border: none; border-radius: 4px; }
        button:hover { background: #0056b3; }
    </style>
</head>
<body>

    <h1>GéoOutil Pro</h1>
    
    <div class="controls">
        <button onclick="clearCanvas()">Effacer tout</button>
        <span>Clique et glisse pour tracer une ligne</span>
    </div>

    <canvas id="geoCanvas" width="800" height="500"></canvas>

    <script>
        const canvas = document.getElementById('geoCanvas');
        const ctx = canvas.getContext('2d');
        let drawing = false;
        let startX, startY;

        // Pour éviter le flou sur les écrans haute résolution
        ctx.lineWidth = 2;
        ctx.strokeStyle = "#333";

        canvas.addEventListener('mousedown', (e) => {
            drawing = true;
            startX = e.offsetX;
            startY = e.offsetY;
        });

        canvas.addEventListener('mouseup', (e) => {
            if (!drawing) return;
            // Dessine la ligne finale
            ctx.beginPath();
            ctx.moveTo(startX, startY);
            ctx.lineTo(e.offsetX, e.offsetY);
            ctx.stroke();
            drawing = false;
        });

        function clearCanvas() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
        }
    </script>
</body>
</html>
