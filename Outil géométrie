<body>
  <h1>üìê Outil G√©om√©trie Lebbar</h1>
  <div id="tool">
    <h2>Aire et p√©rim√®tre</h2>
    <label>C√¥t√© du carr√© : <input type="number" id="carre"></label>
    <button onclick="carre()">Calculer carr√©</button>

    <label>Rayon du cercle : <input type="number" id="cercle"></label>
    <button onclick="cercle()">Calculer cercle</button>

    <h2>Volumes</h2>
    <label>C√¥t√© du cube : <input type="number" id="cube"></label>
    <button onclick="cube()">Calculer cube</button>

    <label>Rayon de la sph√®re : <input type="number" id="sphere"></label>
    <button onclick="sphere()">Calculer sph√®re</button>

    <label>Rayon du cylindre : <input type="number" id="cylindreR"> Hauteur : <input type="number" id="cylindreH"></label>
    <button onclick="cylindre()">Calculer cylindre</button>

    <h2>Triangle rectangle</h2>
    <label>C√¥t√© a : <input type="number" id="triA"> C√¥t√© b : <input type="number" id="triB"></label>
    <button onclick="pythagore()">Calculer hypot√©nuse</button>

    <div id="result"></div>
  </div>

  <script>
    function carre() {
      let a = parseFloat(document.getElementById("carre").value);
      let perimetre = 4 * a;
      let aire = a * a;
      document.getElementById("result").innerText = 
        `Carr√© ‚Üí P√©rim√®tre = ${perimetre}, Aire = ${aire}`;
    }

    function cercle() {
      let r = parseFloat(document.getElementById("cercle").value);
      let circonf = 2 * Math.PI * r;
      let aire = Math.PI * r * r;
      document.getElementById("result").innerText = 
        `Cercle ‚Üí Circonf√©rence = ${circonf.toFixed(2)}, Aire = ${aire.toFixed(2)}`;
    }

    function cube() {
      let a = parseFloat(document.getElementById("cube").value);
      let volume = Math.pow(a, 3);
      document.getElementById("result").innerText = 
        `Cube ‚Üí Volume = ${volume}`;
    }

    function sphere() {
      let r = parseFloat(document.getElementById("sphere").value);
      let volume = (4/3) * Math.PI * Math.pow(r, 3);
      document.getElementById("result").innerText = 
        `Sph√®re ‚Üí Volume = ${volume.toFixed(2)}`;
    }

    function cylindre() {
      let r = parseFloat(document.getElementById("cylindreR").value);
      let h = parseFloat(document.getElementById("cylindreH").value);
      let volume = Math.PI * r * r * h;
      document.getElementById("result").innerText = 
        `Cylindre ‚Üí Volume = ${volume.toFixed(2)}`;
    }

    function pythagore() {
      let a = parseFloat(document.getElementById("triA").value);
      let b = parseFloat(document.getElementById("triB").value);
      let c = Math.sqrt(a*a + b*b);
      document.getElementById("result").innerText = 
        `Triangle rectangle ‚Üí Hypot√©nuse = ${c.toFixed(2)}`;
    }
  </script>
